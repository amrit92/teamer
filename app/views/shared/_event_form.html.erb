<%= simple_form_for @event do |f| %>

  <%= f.input :title%>
  <%= f.input :description%>
  *Date <br>
  
<div id="datetimepicker1" class="input-append date">
  <%= f.text_field :date,:required => true %>
    <span class="add-on">
      <i data-time-icon="icon-time" data-date-icon="icon-calendar">
        </i>
      </span>
    
  </div><br ><br >
  <%= f.submit 'Create', :class => "btn btn-primary"%>

<% end %>

