
<div >
		<h4 id="event<%=index%>"> <%= event.title %> :  </h4> <br>
		<p><%= event.description %> <br>
   		 On <%= time_tag(event.date) %> <br>
   	 <small> about <%= time_ago_in_words(event.created_at) %> ago. </small></p>


		<div class = "btn-group">
			    
		  <%= render :partial => 'users/follow_form',:locals => { :event => event}, :class => "btn" if signed_in? %>
			<%= link_to 'Create Task', new_task_path(:id => event.id), :class=> "btn"%>
			<% user = event.user rescue User.find(event.user_id) %>
		   <% if current_user?(user) %>
		 	 <%= link_to "Delete Event", event, :method => :delete, :confirm => "You sure?", :title => event.title, :class => "btn" %>
			   	 <%#= link_to "Invite People",new_invite_path(:id =>event.id), :class => "btn"%>
			<% end %>
		</div>
</div>

		<% unless event.tasks.empty? %>			
		<div id="tasks<%= index %>"	
				<% event.tasks.each_with_index do |task, index| %>
		
					<h4> style="display:inline"> <%= task.title %>  </h4> <br>
   			 	<p> <%= task.description %> <br>  
   			 	<%= time_tag(event.date) %>    <br>    
   			 	Required : <%= task.required - task.users.count%> <br>
   			 	<small> <%= time_ago_in_words(event.created_at) %> ago. </small></p>
						
					<div class = "btn-group" >
   				 	<% user = task.user rescue User.find(task.user_id)%>
   				 	<% if current_user?(user)%>
   					<%= link_to "delete task", task, :method => :delete, :confirm => "You sure?",    :title => event.title, :class => "btn"%>
   				 <% end %>
   				 <%= render :partial => 'users/doform',:locals => { :task => task}, :class => "btn" if signed_in? %>
   			 </div>
			
					<% end %>

			<%end%>
