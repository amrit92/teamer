
<div style="float:left">
	<table class="table table-hover">  <!-- class="profile" summary="Profile information"> -->
		<tr>

			<td > <!--  class="main"> -->
				<h1>
					<%= gravatar_for @user %>
					<%= @user.name %>
				</h1>

				<% unless @user.events.empty? %>
					<table class="table table-striped">
						<%= render @events %>
					</table>
					<%= will_paginate @events %>
				<% end %>
			</td>	
		</tr>
	</table>
</div>

<div class="sidebar round" style="float:right">
	<%= render 'layouts/sidebar'%>
</div>


