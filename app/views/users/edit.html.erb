<h1>User Settings</h1>
<hr>
<%= simple_form_for @user do |f| %>
  <%= f.input :name%>
  <%= f.input :email%> <!-- , hint: 'user@domain.com' %> -->
  <%= f.input :password%>
  <%= f.input :password_confirmation, label:'Confirmation'%>
  <%= f.submit 'Update', :class => "btn btn-primary"%>
<% end %>

<div>
<%= gravatar_for @user %>
<a href="http://gravatar.com/emails">change</a>
</div>


