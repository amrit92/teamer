<h1> Login </h1>

<hr>
<%= simple_form_for(:session, :url => sessions_path) do |f| %>
  <%= f.input :email%>
  <%= f.input :password %>
  <%= f.submit 'Sign In', :class => "btn btn-primary"%>
<% end %>

